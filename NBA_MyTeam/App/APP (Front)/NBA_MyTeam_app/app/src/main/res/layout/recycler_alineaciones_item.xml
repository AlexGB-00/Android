<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item_alineaciones"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="15dp">

    <TextView
        android:id="@+id/tev_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/standard_text"
        android:layout_marginRight="5dp"></TextView>

    <TextView
        android:id="@+id/tev_finalizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tev_nombre"
        android:layout_centerVertical="true"
        android:textSize="16dp"
        android:textStyle="italic">
    </TextView>

    <TextView
        android:id="@+id/tev_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/standard_text"></TextView>

</RelativeLayout>