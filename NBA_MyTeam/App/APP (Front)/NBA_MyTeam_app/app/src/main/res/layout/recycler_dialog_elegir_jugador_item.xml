<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_jugador_alineacion_item"
        android:layout_width="72dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp">
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_jugador_alineacion_item"
        android:layout_centerVertical="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tev_nombre_jugador_alineacion_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tev_posicion_jugador_alineacion_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
        </com.google.android.material.textview.MaterialTextView>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tev_valoracion_jugador_alineacion_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
    </com.google.android.material.textview.MaterialTextView>

</RelativeLayout>