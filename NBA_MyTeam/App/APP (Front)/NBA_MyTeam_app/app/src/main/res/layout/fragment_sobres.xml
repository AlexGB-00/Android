<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_root_sobres"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SobresFragment"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/lin_sobres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_bronze_card"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/bronze"
            android:elevation="5dp"
            android:src="@drawable/bronze_pack"></ImageView>

        <ImageView
            android:id="@+id/img_silver_card"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/silver"
            android:elevation="5dp"
            android:src="@drawable/silver_pack"></ImageView>

        <ImageView
            android:id="@+id/img_gold_card"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/gold"
            android:elevation="5dp"
            android:src="@drawable/gold_pack"></ImageView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/timer"></ImageButton>

</RelativeLayout>