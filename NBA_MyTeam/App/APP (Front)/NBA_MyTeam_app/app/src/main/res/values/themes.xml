<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NBA_MyTeam_app" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_purple</item>
        <item name="colorSecondaryVariant">@color/medium_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.DrawerArrowTheme" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:animationDuration">1000</item>
    </style>
    <style name="MarginTheme" parent="Theme.AppCompat">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <style name="RadioButtonTheme" parent="Theme.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="BottomNavigationMenuTheme" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/light_purple</item>
        <item name="itemIconTint">@color/dark_gray</item>
        <item name="itemTextColor">@color/dark_gray</item>
    </style>
</resources>