<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_inicio"
    tools:context=".fragments.PortadaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/light_yellow">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tev_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/passion_one"
            android:shadowColor="@color/black"
            android:shadowDx="20"
            android:shadowDy="20"
            android:shadowRadius="10"
            android:text="@string/title"
            android:textColor="@color/light_brown"
            android:textSize="@dimen/title"
            android:textStyle="bold"
            android:paddingLeft="36dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        </com.google.android.material.textview.MaterialTextView>
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_nba"
            android:paddingTop="10dp">
        </ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_portada"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_portada"
        android:textSize="@dimen/btn_portada"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_brown">
    </Button>

</LinearLayout>